# Puerto del servidor
PORT=3000

# Configuración de MongoDB
MONGODB_URI=mongodb://localhost:27017/votacion-blockchain
# Para MongoDB Atlas: mongodb+srv://usuario:password@cluster.mongodb.net/votacion-blockchain

# Configuración de Blockchain
BLOCKCHAIN_RPC_URL=http://127.0.0.1:8545
# Para Ganache o red local
# BLOCKCHAIN_RPC_URL=ws://127.0.0.1:8545

# Dirección del contrato (se actualizará después del deploy)
CONTRACT_ADDRESS=

# Cuenta del administrador (private key sin 0x)
ADMIN_PRIVATE_KEY=

# JWT Configuration
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_EXPIRE=7d

# Configuración de la aplicación
NODE_ENV=development

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 